@model List<ASP_WEB_lez05_Preferiti.Models.Film>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<ul class="list-group">
    @foreach (string pre in ViewBag.ListaPreferiti)
    {
        <li class="list-group-item">
            @pre
            <button type="button" class="btn btn-outline-danger" onclick="elimina('@pre')"> Elimina </button>
        </li>
    }
    
</ul>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Preferiti</th>
            <th>Codice</th>
            <th>Titolo</th>
            <th>Regista</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Film film in Model)
        {
            <tr>
                <td>
                    @if(ViewBag.ListaPreferiti.Contains(film.Codice)){
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-star-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5M8.16 4.1a.178.178 0 0 0-.32 0l-.634 1.285a.18.18 0 0 1-.134.098l-1.42.206a.178.178 0 0 0-.098.303L6.58 6.993c.042.041.061.1.051.158L6.39 8.565a.178.178 0 0 0 .258.187l1.27-.668a.18.18 0 0 1 .165 0l1.27.668a.178.178 0 0 0 .257-.187L9.368 7.15a.18.18 0 0 1 .05-.158l1.028-1.001a.178.178 0 0 0-.098-.303l-1.42-.206a.18.18 0 0 1-.134-.098z" />
                        </svg>
                    }
                </td>
                <td>@film.Codice</td>
                <td>@film.Titolo</td>
                <td>@film.Regista</td>
                <td>@film.Categoria</td>
                <td>
                    @if (!(ViewBag.ListaPreferiti.Contains(film.Codice)))
                    {
                        <button type="button" class="btn btn-outline-success" onclick="preferiti('@film.Codice')">Star</button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-outline-success disabled">Star</button>
                    }                    
                </td>
            </tr>
        }
    </tbody>
</table>